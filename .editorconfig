root = true

# Unix-style newlines with a newline ending every file.
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab

[*.{js,jsx,ts,tsx,scss,css,json,yaml,yml,feature}]
indent_style = space
indent_size = 2

# Dotfiles
[.*]
indent_style = space
indent_size = 2
